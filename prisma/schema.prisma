generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id // Use Clerk's user ID as the primary key
  email     String   @unique
  firstName String?
  lastName  String?
  userName  String?
  image     String?
  role      Role     @default(USER) // Use the Role enum
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
}

model Dress {
  id           Int            @id @default(autoincrement())
  image        String
  name         String
  description  String         @db.Text
  price        Int
  dressCode    String
  quantity     Int            @default(1)
  mainCategory MainCategory
  subCategory  SubCategory
  dressLength  Dress_Length[] @relation("DressLength")
  colors       Color[]        @relation("DressColors")
  sizes        Size[]         @relation("DressSizes")
}

model Color {
  id      Int     @id @default(autoincrement())
  name    String
  dresses Dress[] @relation("DressColors")
}

model Size {
  id      Int     @id @default(autoincrement())
  name    String
  dresses Dress[] @relation("DressSizes")
}

model Dress_Length {
  id      Int     @id @default(autoincrement())
  name    String
  dresses Dress[] @relation("DressLength")
}

enum MainCategory {
  MEN
  WOMEN
  KID
  YOUTH
}

enum SubCategory {
  THOUB
  UNDER_WIRE
  WINTER_PAJAMAS
  SUMMER_PAJAMAS
  COMFORT_THOUB
  WINTER_THOUB
}
