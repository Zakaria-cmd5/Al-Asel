generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Men {
  id          Int    @id @default(autoincrement())
  image       String
  name        String
  description String
  dressLength String
  colors      String
  size        String
  price       Int
  quantity    Int    @default(1)
}

